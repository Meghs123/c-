#include<iostream>
using namespace std;

class Demo
{
    public: 
    Demo()
    {
        cout<<"Constructor of Demo"<<endl;
    }
    ~Demo()
    {
        cout<<"Destructor of Demo"<<endl;
    }
};

void fun()
{
    Demo *p=new Demo(); //dynamically objct is crerated in heap. Constructor is called.
    delete p; //destructor is called. And heap memory is explicitly deleted.
}
int main()

{
    fun();
}
